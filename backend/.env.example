# Database (Docker container on localhost)
DATABASE_URL=postgresql+asyncpg://agent_rangers:agent_rangers_dev@localhost:5432/agent_rangers

# Redis (Docker container - mapped to port 6380)
REDIS_URL=redis://localhost:6380

# CORS origins for frontend
CORS_ORIGINS=http://localhost:5173,http://192.168.1.225:5173,http://localhost:3000

# API Settings
API_V1_PREFIX=/api
PROJECT_NAME=Agent Rangers API
DEBUG=True

# ===========================================
# AI PROVIDER CONFIGURATION
# ===========================================
# Provider mode: "oauth" | "api" | "local" | "auto"
# - oauth: Uses Claude Max subscription via CLI (FREE with Max!)
# - api: Uses Anthropic API (pay-as-you-go)
# - local: Uses Ollama (completely free, local)
# - auto: Tries oauth first, then api, then local
AI_PROVIDER_MODE=oauth

# Anthropic API settings (for api mode)
# ANTHROPIC_API_KEY=your-key-here
ANTHROPIC_MODEL=claude-sonnet-4-20250514

# Ollama settings (for local mode)
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=qwen2.5-coder:32b
